<div class="container">
  <h2>Offer applied</h2>

  <div class="card-grid">
    <% @bookings.each do |booking| %>
        <div class="card-booking">
          <div class="card-index-top">
            <img src="" alt="Avatar perso" class="avatar">
            <h2> <%= booking.offer.user.last_name.capitalize + ' ' +  booking.offer.user.first_name.capitalize %> </h2>
          </div>
          <div class="card-index-text">
            <h3><%= booking.offer.title %></h3>
            <p> <%= booking.offer.description %> </p>
          </div>
          <div class="card-index-bottom">
            <p>Full Time</p>
            <p>Update-time</p>
          </div>
        </div>
    <% end %>
  </div>

  <h2>Offer Create</h2>

  <div class="card-grid">
    <% @my_offers_bookings.each do |booking| %>
      <div class="card-booking">
        <div class="card-index-top">
          <img src="" alt="Avatar perso" class="avatar">
          <h2><%= booking.user.last_name.capitalize + ' ' +  booking.user.first_name.capitalize %> </h2>
        </div>
        <div class="card-index-text">
          <h3><%= booking.offer.title %></h3>
          <p><%= booking.offer.description %></p>
        </div>
        <div class="card-index-bottom">
          <p>Full Time</p>
          <p>Update-time</p>
        </div>
      </div>
    <% end %>
  </div>

</div>
